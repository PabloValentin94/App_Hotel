<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Hotel.App">
    
    <Application.Resources>

        <Style x:Key="titulo" TargetType="Label">

            <Setter Property="TextColor" Value="#FFFF00"/>
            <Setter Property="FontSize" Value="Title"/>
            <Setter Property="FontAttributes" Value="Bold"/>

        </Style>

        <Style x:Key="lbl_campos" TargetType="Label">

            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalTextAlignment" Value="End"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="TextColor" Value="#FFFFFF"/>

        </Style>

        <Style x:Key="lbl_valores_stepper" TargetType="Label">

            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="#0000FF"/>

        </Style>

        <Style x:Key="valores_campos" TargetType="Label">

            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
            <Setter Property="HorizontalTextAlignment" Value="End"/>
            <Setter Property="TextColor" Value="#FF0000"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="Medium"/>

        </Style>

    </Application.Resources>
    
</Application>