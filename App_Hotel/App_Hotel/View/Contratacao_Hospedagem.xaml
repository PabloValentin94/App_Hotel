<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Hotel.View.Contratacao_Hospedagem"
             Title="Contratação de uma hospdagem"
             BackgroundColor="#000000">
    
    <ContentPage.Content>
        
        <StackLayout>

            <Grid x:Name="first_grid" RowSpacing="1" ColumnSpacing="1" Padding="15">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>

                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="70"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>
                
                <!-- Título -->

                <Label Text="Cálculo da Diária"
                       HorizontalTextAlignment="Center"
                       VerticalOptions="CenterAndExpand"
                       Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4"
                       Style="{ StaticResource titulo }"/>
                
                <!-- Adultos -->

                <Label Text="Adultos" Style="{ StaticResource lbl_campos }"
                       Grid.Column="0" Grid.Row="1"/>

                <Stepper x:Name="stepper_adultos" Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"
                         Minimum="1" Maximum="10" Increment="1"/>

                <Label x:Name="lbl_qnt_adultos"
                       Grid.Column="1" Grid.Row="1"
                       Style="{ StaticResource lbl_valores_stepper }"
                       BindingContext="{ x:Reference stepper_adultos }"
                       Text="{ Binding Value }"/>
                
                <!-- Crianças -->

                <Label Text="Crianças" Style="{ StaticResource lbl_campos }"
                       Grid.Column="0" Grid.Row="2"/>

                <Stepper x:Name="stepper_criancas" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"
                         Minimum="1" Maximum="15" Increment="1"/>

                <Label x:Name="lbl_qnt_criancas"
                       Grid.Column="1" Grid.Row="2"
                       Style="{ StaticResource lbl_valores_stepper }"
                       BindingContext="{ x:Reference stepper_criancas }"
                       Text="{ Binding Value }"/>
                
                <!-- O "BindingContext" é um elemento, cuja função é, basicamente, buscar informações sobre um 
                determinado elemento no sistema. Caso ele não consiga encontrar, então ocorrerá um erro.
                     O "Binding" serve para que possamos retornar um dos parâmetros do elemento encontrado. Nesse 
                     caso, por exemplo, os parâmetros disponíveis são: Value; Minimum; Maximum; etc. -->

            </Grid>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>