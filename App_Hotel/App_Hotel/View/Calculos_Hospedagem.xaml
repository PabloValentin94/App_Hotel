                       Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"
                       HorizontalTextAlignment="Start"
                       Style="{ StaticResource valores }"/>

                    <Label Text="Qnt. de Crianças:"
                       Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"
                       FontSize="Medium"
                       HorizontalTextAlignment="End" VerticalTextAlignment="Center"
                       Style="{ StaticResource lbl_campos }"/>

                    <Label Text="{ Binding qnt_criancas }" x:Name="lbl_qnt_criancas"
                       Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"
                       HorizontalTextAlignment="Start"
